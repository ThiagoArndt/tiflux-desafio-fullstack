generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type ClientsAddress {
  cep    String
  number Int
  street String
}

type ClientsContacts {
  email String
  phone String
}

model clients {
  id       String            @id @default(auto()) @map("_id") @db.ObjectId
  address  ClientsAddress
  contacts ClientsContacts[]
  document String
  name     String
}

